<launch>
  <arg name="output_trajectory" default="/planning/scenario_planning/trajectory"/>
  <arg name="output_trajectory_baselink" default="/planning/scenario_planning/trajectory_baselink"/>


  <node name="trajectory_msg_transformer" exec="trajectory_msg_transformer_node" pkg="autoware_planning_validator" output="screen">
    <!-- set target frame id's -->
    <param name="target_frame_" value="base_link" />
    <!-- remap topic name -->
    <remap from="~/output/trajectory" to="$(var output_trajectory)"/>
    <remap from="~/output/transformed_trajectory" to="$(var output_trajectory_baselink)"/>


  </node>
</launch>
